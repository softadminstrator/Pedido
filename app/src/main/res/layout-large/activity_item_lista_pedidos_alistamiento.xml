<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_margin_pos"
    android:paddingLeft="@dimen/activity_margin_pos"
    android:paddingRight="@dimen/activity_margin_pos"
    android:paddingTop="@dimen/activity_margin_pos"
    tools:context="com.principal.factura.ItemListaPedidosAlistamiento">


    <LinearLayout
        android:id="@+id/LLItemPedidoAlistamiento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LLDatoPedido"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPedidoAls"
                style="@style/list_item_text_alistamiento"
                android:layout_width="160dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Ref+estado" />

            <TextView
                android:id="@+id/tvResponsableAls"
                style="@style/list_item_text_alistamiento_small"
                android:layout_width="160dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="responsable" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLDatoCliente"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreClienteAls"
                style="@style/list_item_text_alistamiento"
                android:layout_width="270dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|left"
                android:text="Nombre" />

            <LinearLayout
                android:id="@+id/LLDetalleItemsPedido"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvItemsTotal"
                    style="@style/list_item_text_alistamiento_small_bold"
                    android:layout_width="80dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="Items:000" />

                <TextView
                    android:id="@+id/tvItemsSeparados"
                    style="@style/list_item_text_alistamiento_small_separados"
                    android:layout_width="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="S: 000" />

                <TextView
                    android:id="@+id/tvItemsPendientes"
                    style="@style/list_item_text_alistamiento_small_pendientes"
                    android:layout_width="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="P: 000" />

                <TextView
                    android:id="@+id/tvItemsAgotado"
                    style="@style/list_item_text_alistamiento_small_agotados"
                    android:layout_width="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="A: 000" />

                <TextView
                    android:id="@+id/tvItemsCrudos"
                    style="@style/list_item_text_alistamiento_small"
                    android:layout_width="45dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical|left"
                    android:text="C: 000" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMunicipioClienteAls"
                style="@style/list_item_text_alistamientoMunicipio"
                android:layout_width="270dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|left"
                android:text="Municipio" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLTotalPedido"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTotalPedidoAls"
                style="@style/list_item_text_alistamiento"
                android:layout_width="160dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Total Pedido" />

            <TextView
                android:id="@+id/tvNombreSeparadorAls"
                style="@style/list_item_text_alistamiento_small"
                android:layout_width="160dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Separador" />

            <TextView
                android:id="@+id/tvNombreRevisadorAls"
                style="@style/list_item_text_alistamiento_small"
                android:layout_width="160dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Revisador" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
