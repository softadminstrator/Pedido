<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlVerProductos" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:orientation="vertical" >
        <TextView
	        android:id="@+id/tvOperacionConsultaArticulo"
	        android:layout_width="fill_parent"
	        android:layout_height="20dp"				        		       
	        android:text="OPERACIÃ“N"	       
	        android:gravity="center"
	          style="@style/text_Titulo_small"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
         <TextView
        android:id="@+id/tvTituloBodega"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ARTICULOS"
        android:gravity="center"
        style="@style/text_Titulo_small"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		         android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <TextView
		        android:id="@+id/tvIngreseNombre"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"		       
		        android:gravity="bottom"
		        android:textSize="14sp"
		        android:text="Ingrese el nombre : "
		       android:layout_marginLeft="5dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
          </LinearLayout>
		  <Button
			  android:id="@+id/btPrecioVer"
			  android:layout_marginLeft="15dp"
			  android:layout_width="110dp"
			  android:layout_height="40dp"
			  android:drawableLeft="@drawable/precio"
			  android:background="@drawable/blue_button"
			  style="@style/button_text_small"
			  android:text="Precio 1" />
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"    
		        android:layout_marginTop="2dp" 
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverP"
				       	 android:layout_gravity="right"
				         android:layout_marginTop="2dp"
				         android:layout_width="120dp"
					 	 android:layout_height="40dp"
						  android:background="@drawable/blue_button"
				         style="@style/button_layout"				       			    
						 android:drawableRight="@drawable/volver"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"             
            android:orientation="vertical"		

             >
			        <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="50dp"
			            android:orientation="horizontal"			           
			            android:layout_gravity="center">
						        <EditText
							        android:id="@+id/etNombreArticulos"
							        android:layout_width="220dp"
									android:background="@drawable/edit_text_design"
							        android:layout_height="40dp"
							        android:layout_marginLeft="5dp"
							        >
							    </EditText>
			
						   		<Button
							        android:id="@+id/btConsultarProductos"
							        android:layout_width="120dp"
							        android:layout_height="40dp"	
							        android:layout_marginLeft="20dp"						      
							        android:drawableRight="@drawable/buscar"
							        android:text="Buscar"
									android:background="@drawable/blue_button"
									style="@style/button_text_small"
							    />


						<Button
							android:id="@+id/btSelecArticulos"
							android:layout_width="120dp"
							android:layout_height="40dp"
							android:layout_marginLeft="5dp"
							android:text="Selec"
							android:drawableLeft="@drawable/check2"
							android:textSize="18sp"
							android:background="@drawable/blue_button"
							style="@style/button_layout"
							android:gravity="left|center_vertical"
							/>
			        </LinearLayout>
        </LinearLayout>  
             <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


				 <TextView
					 android:id="@+id/tvCantPedir"
					 android:layout_width="50dp"
					 android:layout_height="wrap_content"
					 android:layout_marginLeft="2dp"
					 android:layout_marginTop="5dp"
					 android:text="CANT"
					 style="@style/text_Titulo_small"
					 android:textSize="14sp"
					 android:gravity="center"
					 />
         <TextView
         android:id="@+id/tvCodigoTitulo"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:layout_marginTop="5dp"
         android:text="CODIGO"
          style="@style/text_Titulo_small"
         android:textSize="14sp"
         android:gravity="center"
          />
				 <TextView
					 android:id="@+id/tvStockTitulo"
					 android:layout_width="100dp"
					 android:layout_height="wrap_content"
					 android:layout_marginLeft="2dp"
					 android:layout_marginTop="5dp"
					 android:text="STOCK"
					 style="@style/text_Titulo_small"
					 android:textSize="14sp"
					 android:gravity="center"
					 android:textColor="#0C5716"
					 />

	     <TextView
	         android:id="@+id/tvNombreTitulo"
	         android:layout_width="240dp"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
	         android:layout_marginTop="5dp"
	         android:text="NOMBRE"	        
	          style="@style/text_Titulo_small"
	          />
	     <TextView
	         android:id="@+id/tvPrecioTitulo"
	         android:layout_width="120dp"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
	         android:layout_marginTop="5dp"
	         android:text="PRECIO"	         
	         android:gravity="right"
	          style="@style/text_Titulo_small"
	          />
	     
     </LinearLayout>
         <ListView
	        android:id="@+id/lvArticulosVP"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"       
         >
    	</ListView>
    </LinearLayout>    
</RelativeLayout>
