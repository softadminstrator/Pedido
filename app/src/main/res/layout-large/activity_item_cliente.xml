<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_margin_pos"
	android:paddingLeft="@dimen/activity_margin_pos"
	android:paddingRight="@dimen/activity_margin_pos"
	android:paddingTop="@dimen/activity_margin_pos">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/BackItem"
		android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/llClientes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="@color/TextItem"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
              <TextView
	         android:id="@+id/tvOrden"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
	         android:layout_marginTop="5dp"
	         android:text="Orden"	         
	         style="@style/list_item_text"

	          />
			<TextView
				android:id="@+id/tvDiasGracia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:text="30"
				style="@style/list_item_text_alistamiento_small_agotados2"

				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
			android:orientation="vertical" >
			<TextView
				android:id="@+id/tvNombre"
				android:layout_width="260dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="5dp"
				android:text="Nombre"
				style="@style/list_item_text"
				/>
			<TextView
				android:id="@+id/tvMotivoVisita"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:gravity="center_horizontal"
				android:text="motivo visita"
				android:textSize="12sp"
				android:textColor="#01579D"
				/>
		</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
	     <TextView
	         android:id="@+id/tvDireccion"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"	        
	         android:layout_marginLeft="5dp"
	         android:layout_marginTop="5dp"
	         android:text="Direccion"	     
	         style="@style/list_item_text"
	          />
	     <TextView
	         android:id="@+id/tvTelefono"
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"	       
	         android:layout_marginLeft="5dp"
			 android:layout_marginTop="2dp"
	         android:text="Telefono"
	         style="@style/list_item_text"
	          />
	</LinearLayout>
     </LinearLayout>
	</LinearLayout>
     

</RelativeLayout>
