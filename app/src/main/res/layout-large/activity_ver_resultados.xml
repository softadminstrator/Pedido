<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rlVerResultados" >

   

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivtienda"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/statistics" />
<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <Button
				         android:id="@+id/btMenuVR"
				       	 android:layout_gravity="left"
				         android:layout_width="120dp"
					     android:layout_height="35dp"	

				          style="@style/button_layout"
					 android:background="@drawable/blue_button"
					 android:drawableRight="@drawable/menu"
				         android:text="Menu" />
          </LinearLayout>
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"   
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverVR"
				       	 android:layout_gravity="right"
				         android:layout_width="120dp"
					     android:layout_height="35dp"

				          style="@style/button_layout"
						  android:background="@drawable/blue_button"
						  android:drawableRight="@drawable/volver"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
        <TextView
            android:id="@+id/tvFechaVR"
            style="@style/text_Titulo_small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Fecha" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordecliente"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalClVR"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total" />

                <TextView
                    android:id="@+id/tvEfectivosCLVR"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Efectivos" />

                <TextView
                    android:id="@+id/tvPendientesCLVR"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Faltantes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalClientesVR"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="###"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvEfectivosValorVR"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="###"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvPendientesValorVR"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="###"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="horizontal" >

			<Spinner
				android:id="@+id/spinnerCategorias"
				android:layout_width="270dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				/>
		</LinearLayout>


          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >
          			<TextView
			        android:id="@+id/tvValorTexto"
			        android:layout_width="wrap_content"
			        android:layout_height="25dp"
			        style="@style/text_Titulo_small"
			        android:layout_marginLeft="10dp"
			        android:gravity="center"
			        android:text="Valor:"
			         />
			         <TextView
			        android:id="@+id/tvValorTotal"
			        android:layout_width="wrap_content"
			        android:layout_height="25dp"
			        style="@style/text_Titulo_small"
			        android:layout_marginLeft="5dp"
			        android:gravity="right"
			        android:text="Valor"
			         />
			  <TextView
				  android:id="@+id/tvCantidadTexto"
				  android:layout_width="wrap_content"
				  android:layout_height="25dp"
				  style="@style/text_Titulo_small"
				  android:layout_marginLeft="10dp"
				  android:gravity="center"
				  android:text="Cant:"
				  />
			  <TextView
				  android:id="@+id/tvCantidadTotal"
				  android:layout_width="wrap_content"
				  android:layout_height="25dp"
				  style="@style/text_Titulo_small"
				  android:gravity="right"
				  android:layout_marginLeft="5dp"
				  android:textColor="#D84315"
				  android:text="Cantidades"
				  />
			  <TextView
				  android:id="@+id/tvUnidadesTexto"
				  android:layout_width="wrap_content"
				  android:layout_height="25dp"
				  style="@style/text_Titulo_small"
				  android:layout_marginLeft="10dp"
				  android:gravity="center"
				  android:text="Und Medida:"/>
			      <TextView
			        android:id="@+id/tvUnidadesTotal"
			        android:layout_width="wrap_content"
			        android:layout_height="25dp"	
			        style="@style/text_Titulo_small"		       
			        android:gravity="right"
			        android:layout_marginLeft="5dp"
					  android:textColor="#0D47A1"
			        android:text="Unidades"
			         />


		</LinearLayout>
       
        <ListView
        android:id="@+id/lvCategorias"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
         >
    	</ListView>
    </LinearLayout>

    

</RelativeLayout>