<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_margin_pos"
	android:paddingLeft="@dimen/activity_margin_pos"
	android:paddingRight="@dimen/activity_margin_pos"
	android:paddingTop="@dimen/activity_margin_pos"
	>

    <LinearLayout
        android:id="@+id/llClientes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
		android:weightSum="1">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
              <TextView
	         android:id="@+id/tvOrden"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
				  android:layout_marginTop="8dp"
				  android:layout_marginBottom="8dp"
	         android:gravity="center"
	         android:text="orden"
	         android:textSize="14sp"
	          />
		<TextView
			android:id="@+id/tvDiasGracia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
			android:text="30"
			style="@style/list_item_text_alistamiento_small_agotados2"

			/>

	</LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
	     <TextView
	         android:id="@+id/tvNombre"
	         android:layout_width="120dp"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"

			 android:layout_marginTop="8dp"
			 android:layout_marginBottom="4dp"
	         android:gravity="center_horizontal"
	         android:text="Nombre"
	         android:textSize="12sp"
	          />
		<TextView
			android:id="@+id/tvMotivoVisita"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2dp"
			android:layout_marginBottom="2dp"
			android:gravity="center_horizontal"
			android:text="motivo visita"
			android:textSize="8sp"
			android:textColor="#01579D"
			/>
	</LinearLayout>
		<TextView
            android:id="@+id/tvDireccion"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="Direccion"
            android:textSize="12sp"
             />

		<TextView
            android:id="@+id/tvTelefono"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:text="Telefono"
            android:textSize="12sp"

            android:layout_weight="0.37" />

	</LinearLayout>



</RelativeLayout>
