<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemCategoriaResActivity" >
    <LinearLayout
        android:id="@+id/llCategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

         <TextView
             android:id="@+id/tvCategoriaResItem"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="CATEGORIA"
             android:gravity="center_vertical|left"             
             style="@style/list_item_text" />
         <TextView
             android:id="@+id/tvCategoriaResTot"
             android:layout_width="160dp"
             android:layout_height="wrap_content"
             android:text="valor total"
             android:gravity="center"
             android:layout_marginLeft="5dp"
             style="@style/list_item_text"/>
        <LinearLayout
            android:id="@+id/llUnidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/tvCategoriaResUnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.999"
                android:textColor="#D84315"
                android:gravity="right"
                style="@style/list_item_text"

                />

            <TextView
                android:id="@+id/tvCategoriaNombreUnidadMedida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mililitro"
                android:textColor="#0D47A1"
                android:gravity="right"
                android:textSize="10sp"
                style="@style/list_item_text"
                />
            <TextView
                android:id="@+id/tvCategoriaUnidVend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999.999"
                android:textColor="#0D47A1"
                android:gravity="right"
                style="@style/list_item_text"
                 />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>