<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_margin_pos"
	android:paddingLeft="@dimen/activity_margin_pos"
	android:paddingRight="@dimen/activity_margin_pos"
	android:paddingTop="@dimen/activity_margin_pos">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/BackItem"
		android:orientation="horizontal">

	<LinearLayout
		android:id="@+id/llClientes"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/TextItem"
		android:layout_marginTop="2dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
		android:orientation="horizontal"
		android:weightSum="1">
		<LinearLayout
			android:id="@+id/LLPedido"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal" >

							<TextView
								android:id="@+id/tvCodigoInterno"
								android:layout_width="80dp"
								android:layout_height="wrap_content"
								android:layout_marginLeft="2dp"
								android:text="Ref"
								android:gravity="center_vertical|center_horizontal"
								style="@style/list_item_text"/>
							<TextView
								android:id="@+id/tvFormaPagoPedido"
								android:layout_width="60dp"
								android:layout_height="wrap_content"
								android:layout_marginLeft="2dp"
								android:text="Credito"
								android:gravity="center_horizontal"
								android:textSize="10sp" />


						<TextView
							android:id="@+id/tvTipoDocumento"
							android:layout_width="15dp"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:text="R"
							android:gravity="center_vertical|center_horizontal"
							android:textSize="14sp" />



						 <TextView
							android:id="@+id/tvHoraPedido"
							android:layout_width="80dp"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
						   android:gravity="center_vertical|center_horizontal"
							android:text="Hora"
						   style="@style/list_item_text" />

							<TextView
							 android:id="@+id/tvPrecioTPedido"
							 android:layout_width="fill_parent"
							 android:layout_height="wrap_content"
							 android:layout_marginLeft="2dp"
							 android:gravity="center_vertical|right"
							 android:text="PrecioT"
							 style="@style/list_item_text"/>


				</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >
				<TextView
					android:id="@+id/tvCodigoExterno"
					style="@style/list_item_text_codigo_externo"
					android:layout_width="70dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="2dp"
					android:text="CodExt"
					android:gravity="center_vertical|center_horizontal"
					 />

				<TextView
					android:id="@+id/tvNombreClienteP"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="2dp"
					android:gravity="center_vertical|center_horizontal"
					android:text="Nombre"
					android:textSize="13sp" />
			</LinearLayout>
		</LinearLayout>


	</LinearLayout>
	</LinearLayout>
   

</RelativeLayout>
