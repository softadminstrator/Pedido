<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlCrearPedido">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"  
        android:orientation="vertical">
        <TextView
				        android:id="@+id/tvOperacionCrearPedido"
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"				        		       
				        android:text="OPERACIÃ“N"
				        android:textSize="20dp"
				        android:gravity="center"
				         style="@style/text_Titulo_small"
				        android:textAppearance="?android:attr/textAppearanceLarge" />
<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <Button
				         android:id="@+id/btMenuC"
				       	 android:layout_gravity="left"
				         android:layout_width="120dp"
					     android:layout_height="35dp"	
					     android:layout_marginLeft="5dp"
					 android:background="@drawable/blue_button"
				          style="@style/button_layout"				       			    

					     android:drawableRight="@drawable/menu"
				         android:text="Menu" />
          </LinearLayout>
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"   
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverC"
				       	 android:layout_gravity="right"
				         android:layout_width="120dp"
					     android:layout_height="35dp"
						  android:background="@drawable/blue_button"
				          style="@style/button_layout"	
				          android:layout_marginRight="5dp"			       			    

					     android:drawableRight="@drawable/volver"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="5dp">
             <TextView
		        android:id="@+id/tvRutaC"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"		       
		        android:text="Ruta."
		        style="@style/text_Titulo_small"
		       />
		    
			    <TextView
		        android:id="@+id/tvRutaCN"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="30dp"		    
		        android:text="00000"
		         style="@style/list_item_text_small"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >
			     <LinearLayout
			            android:layout_width="fill_parent"
			            android:layout_height="40dp" 
			            android:orientation="horizontal"
			            android:layout_marginTop="20dp" 
			            android:layout_gravity="center">
						     <TextView
						        android:id="@+id/tvReferenciaLAP2"
						        android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
						        android:layout_marginLeft="170dp"						        
						        android:text="No. Pedido"
						        android:gravity="top|center_horizontal"
						        style="@style/text_Titulo_small"
						        android:textAppearance="?android:attr/textAppearanceLarge" />
						     <TextView
						        android:id="@+id/tvReferenciaTR2"
						        android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
						        android:layout_marginLeft="4dp"
						        android:ems="10"
						        android:text="####."
						        style="@style/list_item_text_small"
						        android:gravity="left"
						        />	
			        </LinearLayout>	    
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@color/BackItem"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/llDetalleCliente"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/TextItem"
				android:layout_marginTop="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:layout_marginBottom="2dp"
				android:orientation="horizontal"
				android:weightSum="1">
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical" >
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/tvClientetx"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:text="Cliente"
							android:textSize="10sp"
							android:gravity="right|center_vertical"
							android:textColor="#01579D"
							android:textAppearance="?android:attr/textAppearanceLarge" />
						<TextView
							android:id="@+id/tvClienteN"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:gravity="center"
							android:text="NOMBRE COMPLETO DEL CLIENTE"
							android:ems="10"
							/>
					</LinearLayout>
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal" >

						<TextView
							android:id="@+id/tvDireccionClientex"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:text="  Datos"
							android:textSize="10sp"
							android:gravity="right|center_vertical"
							android:textColor="#01579D"
							android:textAppearance="?android:attr/textAppearanceLarge" />
						<TextView
							android:id="@+id/tvDatosCliente"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:gravity="center"
							android:text="Demas datos del cliente"
							android:textSize="12sp"
							android:ems="10"
							/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:layout_marginTop="30dp">
			      <LinearLayout
			            android:layout_width="460dp"
			            android:layout_height="wrap_content" 
			            android:orientation="horizontal"			            
			            android:layout_gravity="center">
					        <TextView
					        android:id="@+id/tvCodigo"
					        android:layout_width="85dp"
						    android:layout_height="30dp"			       
					        android:text="Codigo"
					        style="@style/text_Titulo_small"
					        android:layout_marginLeft="25dp"
			                android:gravity="right"
					        android:textAppearance="?android:attr/textAppearanceLarge" />

					  <EditText
						  android:id="@+id/etCodigo"
						  style="@style/list_item_text"
						  android:layout_width="200dp"
						  android:layout_height="wrap_content"
						  android:layout_marginLeft="20dp"
						  android:ems="10"
						  android:gravity="center"
						  android:inputType="text|number" />
					         <ImageView
				             android:id="@+id/imUbicacionCliente"
				             android:layout_width="30dp"
				             android:layout_height="35dp"
				             android:layout_marginLeft="30dp"		            
				             android:src="@drawable/marker" />
			           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			       <TextView
			        android:id="@+id/tvArticulo"
			        android:layout_width="fill_parent"
				    android:layout_height="wrap_content"			       
			        android:layout_marginTop="20dp"	
			        android:layout_marginLeft="10dp"   
				    android:layout_marginRight="10dp"  		    
			        android:gravity="center"
			        style="@style/list_item_text"
			        android:text="NOMBRE COMPLETO DEL ARTICULO CON REFERENCIA Y CONTENIDO 30 X 300 GR"
			        />
        </LinearLayout>
        <TextView
		        android:id="@+id/tvStockArticulo"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginTop="5dp"
		        android:ems="10" 
		        style="@style/list_item_text"
		        android:text="STOCK. 200"
		        android:gravity="center"
		        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:layout_marginTop="20dp">
			         <LinearLayout
			            android:layout_width="480dp"
			            android:layout_height="wrap_content" 
			            android:orientation="horizontal"			           
			            android:layout_gravity="center">

			             <TextView
			                 android:id="@+id/tvPrecio"
			                 android:layout_width="85dp"
			                 android:layout_height="30dp"
			                 android:layout_marginLeft="35dp"
			                 android:gravity="right"
			                 android:text="Precio"
			                 android:textAppearance="?android:attr/textAppearanceLarge"
			                 style="@style/text_Titulo_small" />

						           <EditText
						         android:id="@+id/etPres"
						         android:layout_width="200dp"
							     android:layout_height="wrap_content"								   
						         android:ems="10"
						         android:layout_marginLeft="20dp"		
						         android:gravity="center"
						          style="@style/list_item_text"
						         android:inputType="number" >
						         <requestFocus />
						     </EditText>
						       <Button
						         android:id="@+id/btPrecio"
						         android:layout_marginLeft="15dp"			         
						         android:layout_width="120dp"
							     android:layout_height="40dp"
							     android:drawableLeft="@drawable/precio"
								   android:background="@drawable/blue_button"
						         style="@style/button_text_small"   
						         android:text="Precio 1" />
			        </LinearLayout>
        </LinearLayout>
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp" >
			        <LinearLayout
			            android:layout_width="460dp"
			            android:layout_height="wrap_content" 
			            android:orientation="horizontal"			          
			            android:layout_gravity="center">
							      <TextView
							        android:id="@+id/tvCantidad"
							        android:layout_width="85dp"
								    android:layout_height="30dp"
								    android:layout_marginLeft="25dp"			        		       
							        android:text="Cantidad"
							        android:gravity="right"
							        style="@style/text_Titulo_small"						 
							        android:textAppearance="?android:attr/textAppearanceLarge" />

						<EditText
							android:id="@+id/etCant"
							style="@style/list_item_text"
							android:layout_width="200dp"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20dp"
							android:ems="10"
							android:gravity="center"
							android:inputType="numberDecimal" />
			          </LinearLayout>
        </LinearLayout>
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="30dp"
            android:orientation="vertical"
             >
			        <LinearLayout
			            android:layout_width="460dp"
			            android:layout_height="wrap_content" 
			            android:orientation="vertical"			          
			            android:layout_gravity="center">
					        <Button
					         android:id="@+id/btAgregar"
					         android:layout_gravity="center"	        
					         android:layout_width="200dp"
						     android:layout_height="50dp"
						     android:drawableLeft="@drawable/agregar"
								android:background="@drawable/blue_button"
						     style="@style/button_text_small"
					         android:text="AGREGAR" />
			        </LinearLayout>
        </LinearLayout>
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"             
            android:orientation="vertical"		
            android:layout_marginTop="30dp"          
             >
			        <LinearLayout
			            android:layout_width="460dp"
			            android:layout_height="60dp" 
			            android:orientation="horizontal"			           
			            android:layout_gravity="center">
						         <Button
						         android:id="@+id/btBuscar"
						         android:layout_marginLeft="10dp"			        
						         android:layout_width="200dp"
							     android:layout_height="50dp"
							     android:textSize="14sp"
							     android:drawableLeft="@drawable/buscar"
							     android:layout_gravity="center"
								 android:background="@drawable/blue_button"
							     style="@style/button_text_small"
						         android:text="BUSCAR ARTICULO POR NOMBRE" />
			
						     <Button
						         android:id="@+id/btVer"
						         android:layout_marginLeft="40dp"			        
						         android:layout_width="200dp"
							     android:layout_height="50dp"
							     android:layout_gravity="center"
							     android:drawableLeft="@drawable/ver"
								 android:background="@drawable/blue_button"
							     style="@style/button_text_small"
							     android:text="VER PEDIDO" />
			        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
     
</RelativeLayout>
