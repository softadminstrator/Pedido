<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.principal.factura.ItemLibroActivity">

    <LinearLayout
        android:id="@+id/LLLibro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LLLibroFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLibroNComprobante"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                style="@style/list_item_text"
                android:gravity="center_vertical|center_horizontal"
                android:text="9.999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLibroFechaHora"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                style="@style/list_item_text"
                android:gravity="center_vertical|center_horizontal"
                android:text="01/01/2018"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLibroDebito"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:gravity="center_vertical|right"
            style="@style/list_item_text"
            android:text="99.999.999"
             />

        <TextView
            android:id="@+id/tvLibroCredito"
            android:layout_width="110dp"
            android:layout_height="40dp"
            style="@style/list_item_text"
            android:gravity="center_vertical|right"
            android:text="99.999.999"
            />

        <TextView
            android:id="@+id/tvLibroSaldo"
            android:layout_width="110dp"
            android:layout_height="40dp"
            style="@style/list_item_text"
            android:gravity="center_vertical|right"
            android:text="99.999.999"
             />


    </LinearLayout>
</LinearLayout>
