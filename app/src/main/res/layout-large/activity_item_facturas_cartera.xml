<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
 <LinearLayout
        android:id="@+id/llItemFacturaCredito"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

     	<CheckBox
     	    android:id="@+id/cbPago"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:checked="false"
     	    android:clickable="false"
     	    android:focusable="false"
     	    android:text="" />

        <TextView
            android:id="@+id/tvNFacturaC"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="NFactura"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="15sp" />
		<TextView
            android:id="@+id/tvCajaC"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="NCaja"
            android:textSize="14sp" />

         <TextView
            android:id="@+id/tvFechaC"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
           android:gravity="center_vertical|center_horizontal"
            android:text="01/01/2015"
            android:textSize="14sp" />
        
            <TextView
	         android:id="@+id/tvTotalFacturaC"
	         android:layout_width="90dp"
	         android:layout_height="60dp"
	         android:layout_marginLeft="5dp"
	         android:layout_marginTop="5dp"
	         android:gravity="center_vertical|right"
	         android:text="99.999.999"
	         android:textSize="14sp"/>
            
              <TextView
	         android:id="@+id/tvSaldoFacturaC"
	         android:layout_width="90dp"
	         android:layout_height="60dp"
	         android:layout_marginLeft="5dp"
	         android:layout_marginTop="5dp"
	         android:gravity="center_vertical|right"
	         android:text="99.999.999"
	         android:textSize="14sp"/>
        
        
    </LinearLayout>
</RelativeLayout>