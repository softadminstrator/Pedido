<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewProductActivity" >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_marginTop="10dp"
            android:orientation="vertical"
             >
			        <LinearLayout
			            android:layout_width="400dp"
			            android:layout_height="wrap_content" 
			            android:orientation="vertical"			          
			            android:layout_gravity="center">

					       <ImageView
					           android:id="@+id/imArticulo"
					           android:layout_width="fill_parent"
					           android:layout_height="500dp"
					           android:layout_marginLeft="5dp"
					           android:layout_marginRight="5dp"
					           android:layout_marginTop="5dp"
					           android:adjustViewBounds="false"
					           />

			        </LinearLayout>
			         <TextView
			        android:id="@+id/tvViewLabelNombre"
			        android:layout_width="fill_parent"
				    android:layout_height="30dp"			       
			        android:text="Nombre"
			        style="@style/text_Titulo_small"			      
	                android:gravity="center"
			        android:textAppearance="?android:attr/textAppearanceLarge" />
		        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
			      
			       <TextView
			        android:id="@+id/tvViewArticulo"
			        android:layout_width="fill_parent"
				    android:layout_height="wrap_content"			       
			        android:layout_marginTop="5dp"	
			        android:layout_marginLeft="10dp"   
				    android:layout_marginRight="10dp"  		    
			        android:gravity="center"
			        style="@style/list_item_text"
			        android:text="NOMBRE COMPLETO DEL ARTICULO CON REFERENCIA Y CONTENIDO 30 X 300 GR"
			        />
        </LinearLayout>
         <TextView
			        android:id="@+id/tvViewLabelPrecio"
			        android:layout_width="fill_parent"
				    android:layout_height="30dp"			       
			        android:text="Precio"
			        style="@style/text_Titulo_small"			      
	                android:gravity="center"
			        android:textAppearance="?android:attr/textAppearanceLarge" />
			     
	        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" >
			     <TextView
			        android:id="@+id/tvViewPrecio"
			        android:layout_width="fill_parent"
				    android:layout_height="30dp"			       
			        android:layout_marginTop="5dp"	
			        android:layout_marginLeft="10dp"   
				    android:layout_marginRight="10dp"  		    
			        android:gravity="center"
			        style="@style/list_item_text"
			        android:text="$ 50.000"
			        />
        </LinearLayout>
         <TextView
			        android:id="@+id/tvViewLabelCodigo"
			        android:layout_width="fill_parent"
				    android:layout_height="30dp"			       
			        android:text="Codigo"
			        style="@style/text_Titulo_small"			      
	                android:gravity="center"
			        android:textAppearance="?android:attr/textAppearanceLarge" />
      
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
			     <TextView
			        android:id="@+id/tvViewCodigo"
			        android:layout_width="fill_parent"
				    android:layout_height="wrap_content"			       
			        android:layout_marginTop="5dp"	
			        android:layout_marginLeft="10dp"   
				    android:layout_marginRight="10dp"  		    
			        android:gravity="center"
			        style="@style/list_item_text"
			        android:text="77711111"
			        />
			       </LinearLayout>     
			      <Button
				        android:id="@+id/btViewVolver"
					  android:background="@drawable/blue_button"
					  style="@style/button_text_small"
				        android:layout_width="200dp"
				        android:layout_height="50dp"
				        android:layout_marginTop="20dp"
				        android:layout_gravity="center"
				        android:textSize="20dp"
				        android:textColor="#ffffff"
				        android:drawableRight="@drawable/volver"       
				        android:text="Volver" />   
			  </LinearLayout>       
			      
      
             
        
    

</RelativeLayout>