<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
 <LinearLayout
        android:id="@+id/llItemFacturaCredito"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

     	<CheckBox
            android:id="@+id/cbPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/tvNFacturaC"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:text="NFactura"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="14sp" />
		<TextView
            android:id="@+id/tvCajaC"
            android:layout_width="25dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="NCaja"
            android:textSize="13sp" />

         <TextView
            android:id="@+id/tvFechaC"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
           android:gravity="center_vertical|center_horizontal"
            android:text="01/01/2015"
            android:textSize="13sp" />
        
            <TextView
	         android:id="@+id/tvTotalFacturaC"
	         android:layout_width="70dp"
	         android:layout_height="60dp"
	         android:layout_marginLeft="5dp"
	         android:layout_marginTop="5dp"
	         android:gravity="center_vertical|right"
	         android:text="99.999.999"
	         android:textSize="13sp"/>
            
              <TextView
	         android:id="@+id/tvSaldoFacturaC"
	         android:layout_width="70dp"
	         android:layout_height="60dp"
	         android:layout_marginLeft="5dp"
	         android:layout_marginTop="5dp"
	         android:gravity="center_vertical|right"
	         android:text="99.999.999"
	         android:textSize="13sp"/>
        
        
    </LinearLayout>
</RelativeLayout>