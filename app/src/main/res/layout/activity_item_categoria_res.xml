<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".ItemCategoriaResActivity" >
    <LinearLayout
        android:id="@+id/llCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

         <TextView
             android:id="@+id/tvCategoriaResItem"
             android:layout_width="140dp"
             android:layout_height="wrap_content"
             android:text="CATEGORIA"
             android:gravity="center_vertical|left"
             android:textSize="12sp" />
         <TextView
             android:id="@+id/tvCategoriaResTot"
             android:layout_width="90dp"
             android:layout_height="wrap_content"
             android:text="999.999.999"
             android:gravity="right"
             android:layout_marginLeft="2dp"
             android:textSize="15sp" />
    <LinearLayout
        android:id="@+id/llUnidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
           <TextView
        android:id="@+id/tvCategoriaResUnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999.999"
               android:textColor="#D84315"
        android:gravity="right"

        android:textSize="15sp" />
        <TextView
            android:id="@+id/tvCategoriaNombreUnidadMedida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mililitro"
            android:textColor="#0D47A1"
            android:gravity="right"
            android:textSize="8sp" />
        <TextView
            android:id="@+id/tvCategoriaUnidVend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999.999"
            android:textColor="#0D47A1"
            android:gravity="right"
            android:textSize="15sp" />
    </LinearLayout>
          

    </LinearLayout>

</RelativeLayout>