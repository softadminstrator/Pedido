<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlTrasladoBodega"
    tools:context=".SelecTrasladoBodegaActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
          <TextView
				        android:id="@+id/tvOperacionTrasladoBodega"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"				        		       
				        android:text="OPERACIÃ“N"
				        android:textSize="20dp"
				        android:gravity="center"
				        android:textAppearance="?android:attr/textAppearanceLarge" />
          <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"    
        android:orientation="horizontal" >
		          <TextView
		        android:id="@+id/tvRutaTrasladoText"
		        android:layout_width="40dp"
		        android:layout_height="20dp"
		        android:text="Ruta."
		        android:textSize="13dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    
		    <TextView
		        android:id="@+id/tvRutaTraslado"
		        android:layout_width="40dp"
		        android:layout_height="20dp"
		        android:layout_marginLeft="5dp"
		        android:text="00000"
		        android:textSize="13dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
           <TextView
		        android:id="@+id/tvSeleccioneBodegas"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"		     
		        android:gravity="center"
		        android:layout_marginTop="30dp"
		        android:text="Seleccione las Bodegas"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="20sp" />
         
		     
		     <TextView
		        android:id="@+id/tvBodegaOrigen"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"		     
		        android:gravity="center"
		        android:layout_marginTop="30dp"
		        android:text="Origen"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="20sp" />

		     <EditText
		         android:id="@+id/etBodegaOrigen"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content" 
		         android:layout_marginLeft="20dp"
		          android:layout_marginTop="10dp"
		         android:layout_marginRight="20dp"	
		         android:drawableRight="@drawable/flecha"
		       >
		     </EditText>   
		     <TextView
		        android:id="@+id/tvBodegaDestino"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"		     
		        android:gravity="center"
		        android:layout_marginTop="30dp"
		        android:text="Destino"
		        android:textAppearance="?android:attr/textAppearanceLarge"
		        android:textSize="20sp" />

		     <EditText
		         android:id="@+id/etBodegaDestino"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content" 
		         android:layout_marginLeft="20dp"
		          android:layout_marginTop="10dp"
		         android:layout_marginRight="20dp"	
		         android:drawableRight="@drawable/flecha"
		       >
		     </EditText>    
		        <Button
		         android:id="@+id/btAgregarProductos"
		         android:layout_width="150dp"
			     android:layout_height="50dp"
			     android:layout_marginTop="20dp"
			     android:layout_gravity="center"
			     android:drawableLeft="@drawable/agregar"
			     style="@style/button_layout"
					android:background="@drawable/blue_button"
		         android:text="Agregar Productos" /> 
    	    
    	
    </LinearLayout>

</RelativeLayout>