<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlCrearPedido">
 <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
        android:orientation="vertical" >
        <TextView
				        android:id="@+id/tvOperacionCrearPedido"
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"				        		       
				        android:text="OPERACIÃ“N"
				        android:textSize="16dp"
				        android:gravity="center"
				        android:textAppearance="?android:attr/textAppearanceLarge" />
        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <Button
				         android:id="@+id/btMenuC"
				       	 android:layout_gravity="left"
				         android:layout_width="120dp"
					     android:layout_height="35dp"	
					     android:layout_marginLeft="5dp"
					 	android:background="@drawable/blue_button"
				          style="@style/button_layout"
						 android:drawableRight="@drawable/menu"
				         android:text="Menu" />
          </LinearLayout>
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"   
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverC"
				       	 android:layout_gravity="right"
				         android:layout_width="120dp"
					     android:layout_height="35dp"
					     android:layout_marginRight="5dp"
						  android:background="@drawable/blue_button"
				          style="@style/button_layout"
					     android:drawableRight="@drawable/volver"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
        <LinearLayout
        android:id="@+id/linearLayout123"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >
		          <TextView
		        android:id="@+id/tvRutaC"
		        android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginTop="2dp"
		        android:text="Ruta."
		        android:textSize="13dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    
		    <TextView
		        android:id="@+id/tvRutaCN"
		        android:layout_width="wrap_content"
		        android:layout_height="20dp"
		        android:layout_marginLeft="5dp"		      
		        android:text="00000"
		        android:textSize="13dp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		     <TextView
		        android:id="@+id/tvReferenciaLAP2"
		        android:layout_width="70dp"
			    android:layout_height="20dp"
		        android:layout_marginLeft="100dp"
		        android:text="No. Pedido"
		        android:gravity="top|center_horizontal"
		        android:textSize="12sp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		        <TextView
		        android:id="@+id/tvReferenciaTR2"
		        android:layout_width="60dp"
			    android:layout_height="20dp"
		        android:layout_marginLeft="5dp"
		        android:ems="10"
		        android:text="####."
		        android:gravity="top|center_horizontal"
       			 />	 
       			
     </LinearLayout>

	 <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:background="@color/BackItem"
		 android:orientation="horizontal">

		 <LinearLayout
			 android:id="@+id/llDetalleCliente"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:background="@color/TextItem"
			 android:layout_marginTop="2dp"
			 android:layout_marginLeft="2dp"
			 android:layout_marginRight="2dp"
			 android:layout_marginBottom="2dp"
			 android:orientation="horizontal"
			 android:weightSum="1">
			 <LinearLayout
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:orientation="vertical" >
			 <LinearLayout
				 android:layout_width="fill_parent"
				 android:layout_height="wrap_content"
				 android:orientation="horizontal" >

				 <TextView
					 android:id="@+id/tvClientetx"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginLeft="2dp"
					 android:text="Cliente"
					 android:textSize="10sp"
					 android:gravity="right|center_vertical"
					 android:textColor="#01579D"
					 android:textAppearance="?android:attr/textAppearanceLarge" />
				 <TextView
					 android:id="@+id/tvClienteN"
					 android:layout_width="fill_parent"
					 android:layout_height="wrap_content"
					 android:layout_marginLeft="2dp"
					 android:gravity="center"
					 android:text="NOMBRE COMPLETO DEL CLIENTE"
					 android:ems="10"
					 />
			 </LinearLayout>
				 <LinearLayout
					 android:layout_width="fill_parent"
					 android:layout_height="wrap_content"
					 android:orientation="horizontal" >

					 <TextView
						 android:id="@+id/tvDireccionClientex"
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:layout_marginLeft="2dp"
						 android:text="  Datos"
						 android:textSize="10sp"
						 android:gravity="right|center_vertical"
						 android:textColor="#01579D"
						 android:textAppearance="?android:attr/textAppearanceLarge" />
					 <TextView
						 android:id="@+id/tvDatosCliente"
						 android:layout_width="fill_parent"
						 android:layout_height="wrap_content"
						 android:layout_marginLeft="2dp"
						 android:gravity="center"
						 android:text="Demas datos del cliente"
						 android:textSize="12sp"
						 android:ems="10"
						 />
				 </LinearLayout>
			 </LinearLayout>
		 </LinearLayout>
	 </LinearLayout>
            <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2dp"
				android:layout_marginLeft="30dp"
				android:gravity="left"
			        android:orientation="horizontal" > 
			          <TextView
			        android:id="@+id/tvCodigo"
			        android:layout_width="85dp"
				    android:layout_height="30dp"
			        android:layout_marginLeft="0dp"
			        android:text="Codigo"
			        android:textSize="18sp"

			        android:gravity="right|center_vertical"
			        android:textAppearance="?android:attr/textAppearanceLarge" />

				<EditText
					android:id="@+id/etCodigo"
					android:layout_width="150dp"
					android:layout_height="40dp"
					android:layout_marginLeft="5dp"
					android:hint="Codigo"
					android:background="@drawable/edit_text_design"
					android:ems="10"
					android:inputType="text|number" />

				<ImageView
		             android:id="@+id/imUbicacionCliente"
		             android:layout_width="30dp"
		             android:layout_height="35dp"
		             android:layout_marginLeft="5dp"
		             android:src="@drawable/marker" />
         		</LinearLayout>
         		<TextView
		        android:id="@+id/tvArticulo"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginTop="15dp"
		        android:ems="10" 
		        android:text="NOMBRE COMPLETO DEL ARTICULO Y EMBALAJE ESPECIFICADO"
		        android:gravity="center"
		        />
         		<TextView
		        android:id="@+id/tvStockArticulo"
		        android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
		        android:layout_marginLeft="2dp"
		        android:layout_marginTop="5dp"
		        android:ems="10" 
		        android:text="STOCK. 200"
		        android:gravity="center"
		        />
	 <LinearLayout
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:layout_marginTop="5dp"
		 android:layout_marginLeft="30dp"
		 android:orientation="vertical">
         		  <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="5dp"
					  android:gravity="left"
			        android:orientation="horizontal" >
			          <TextView
				        android:id="@+id/tvPrecio"
				        android:layout_width="85dp"
					    android:layout_height="30dp"
				        android:layout_marginLeft="0dp"				       
				        android:text="Precio"
				         android:textSize="18sp"
				        android:gravity="right|center_vertical"
				        android:textAppearance="?android:attr/textAppearanceLarge" />

					  <EditText
						  android:id="@+id/etPres"
						  android:layout_width="150dp"
						  android:layout_height="40dp"
						  android:layout_marginLeft="5dp"
						  android:ems="10"
						  android:background="@drawable/edit_text_design"
						  android:inputType="number">

						  <requestFocus />
					  </EditText>
					     <Button
					         android:id="@+id/btPrecio"
					         android:layout_marginLeft="5dp"					        
					         android:layout_width="90dp"
						     android:layout_height="40dp"
						     android:drawableLeft="@drawable/precio"
							 android:background="@drawable/blue_button"
						     style="@style/button_layout"				       			    

					         android:text="Precio 1" />

				  </LinearLayout>
	 </LinearLayout>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="30dp"
			android:gravity="left"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tvCantidad"
				android:layout_width="85dp"
				android:layout_height="30dp"
			 	android:text="Cantidad"
				android:gravity="right|center_vertical"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textSize="18sp" />

			<EditText
				android:id="@+id/etCant"
				android:layout_width="150dp"
				android:layout_height="40dp"
				android:layout_marginLeft="5dp"
				android:background="@drawable/edit_text_design"
				android:ems="10"
				android:inputType="numberDecimal" />
		</LinearLayout>

		<Button
		         android:id="@+id/btAgregar"
		         android:layout_width="150dp"
			     android:layout_height="50dp"
			     android:layout_marginTop="5dp"
			     android:layout_gravity="center"
			     android:drawableLeft="@drawable/agregar"
			   android:background="@drawable/blue_button"
			     style="@style/button_layout"				       			    

		         android:text="AGREGAR" />
         		   
         		<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <Button
					         android:id="@+id/btBuscar"					       
					         android:layout_width="150dp"
						     android:layout_height="50dp"
						     android:textSize="10sp"
						     android:layout_gravity="left"
						     android:layout_marginLeft="2dp"
						     android:drawableLeft="@drawable/buscar"
					 			android:background="@drawable/blue_button"
						     style="@style/button_layout"
							 android:text="BUSCAR ARTICULO POR NOMBRE" />
          </LinearLayout>
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"   
		        android:orientation="vertical" >
				       <Button
					         android:id="@+id/btVer"
					         android:layout_width="150dp"
						     android:layout_height="50dp"
						     android:layout_marginRight="2dp"
						  	 android:background="@drawable/blue_button"
						     style="@style/button_layout"					      
						     android:layout_gravity="right"		       			    
							 android:drawableLeft="@drawable/ver"
						     android:text="VER PEDIDO" /> 
			         
				     </LinearLayout>
          </LinearLayout>
         		   
         		   
    </LinearLayout>     
     </ScrollView>
</RelativeLayout>
