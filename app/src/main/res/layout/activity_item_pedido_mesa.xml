<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemPedidoMesaActivity" >

      <LinearLayout
       android:id="@+id/llItemPedidoMesa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           <TextView
	         android:id="@+id/tvCantidadPM"
	         android:layout_width="40dp"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
	         android:layout_marginTop="5dp"
	         android:text="Cant"         
	         style="@style/list_item_text"
	          />
		     <TextView
		         android:id="@+id/tvNombreaPM"
		         android:layout_width="200dp"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="5dp"
		         android:layout_marginTop="5dp"
		         android:text="Nombre"
		         style="@style/list_item_text"
		          />
		     <TextView
		         android:id="@+id/tvPrecioUPM"
		         android:layout_width="80dp"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="5dp"
		         android:layout_marginTop="5dp"
		         android:text="PrecioU"
		         style="@style/list_item_text"
		         android:gravity="right"
		          />
		     <TextView
		         android:id="@+id/tvPrecioTPM"
		         android:layout_width="80dp"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="5dp"
		         android:layout_marginTop="5dp"
		         android:text="PrecioT"
		         style="@style/list_item_text"
		         android:gravity="right"
		          />

     </LinearLayout>

</RelativeLayout>