<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.principal.factura.VerConsolidadoAlistameinto">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btVolverConAls"
                    style="@style/button_layout"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/blue_button"
                    android:drawableRight="@drawable/volver"
                    android:text="Volver" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTituloConAls"
            style="@style/text_Titulo_small"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="CONSOLIDADO DE ALISTAMIENTO" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bordecliente"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvNPedidosConAls"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="# Pedidos" />

                <TextView
                    android:id="@+id/tvItemsConAls"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="# Items" />
                <TextView
                    android:id="@+id/tvValorConAls"
                    style="@style/list_item_text"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Valor" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvNPedidosValorConAls"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="###"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvItemsValorConAls"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="###"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/tvTValorConAls"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="##.###.###"
                    android:textSize="20dp" />


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTituloArticuloConAls"
                style="@style/text_Titulo_small"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="Articulo" />

            <TextView
                android:id="@+id/tvTituloCantidadesConAls"
                style="@style/text_Titulo_small"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:layout_marginLeft="120dp"
                android:gravity="right"
                android:text="Cantidad" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvArticulosConAls"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"></ListView>
    </LinearLayout>
</LinearLayout>
