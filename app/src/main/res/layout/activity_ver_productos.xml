<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rlVerProductos">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<Button
				android:id="@+id/btMenuVP"
				android:background="@drawable/blue_button"
				style="@style/button_layout"
				android:layout_width="120dp"
				android:layout_height="match_parent"
				android:layout_gravity="left"
				android:layout_marginLeft="5dp"
				android:drawableRight="@drawable/menu"
				android:text="Menu" />

		</LinearLayout>
	</LinearLayout>
		<TextView
			android:id="@+id/tvOperacionConsultaArticulo"
			android:layout_width="fill_parent"
			android:layout_height="20dp"
			android:text="OPERACIÃ“N"
			android:textSize="16dp"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceLarge" />
         <TextView
        android:id="@+id/tvTituloBodega"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      	android:gravity="center"
        android:layout_marginTop="2dp"
        android:text="ARTICULOS"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
         <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		         android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >
		         <TextView
		        android:id="@+id/tvIngreseNombre"
					 android:layout_width="150dp"
		        android:layout_height="match_parent"		       
		        android:gravity="bottom"
		        android:textSize="14sp"
		        android:text="Ingrese el nombre : "
		        android:textAppearance="?android:attr/textAppearanceLarge" />
          </LinearLayout>
			 <Button
				 android:id="@+id/btPrecioVer"
				 android:layout_width="90dp"
				 android:layout_height="40dp"
				 android:layout_marginLeft="5dp"
				 android:drawableLeft="@drawable/precio"
				 android:text="Precio 1"


				 android:textSize="14sp"
				 android:background="@drawable/blue_button"
				 style="@style/button_layout"
				 android:gravity="center" />

         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"    
		        android:layout_marginTop="2dp" 
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverP"
				       	 android:layout_gravity="right"
				         android:layout_marginTop="2dp"
				         android:layout_width="120dp"
					     android:layout_height="35dp"
						  android:background="@drawable/blue_button"
				          style="@style/button_layout"

					     android:drawableRight="@drawable/volver"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
          
           <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		         android:layout_marginTop="5dp"
		        android:orientation="horizontal"
			   android:weightSum="1">
		        
               <EditText
			        android:id="@+id/etNombreArticulos"
			        android:layout_width="150dp"
			        android:layout_height="40dp"
				   android:background="@drawable/edit_text_design"
			        android:layout_marginLeft="2dp"
			       
			        android:ems="10" >        
			    </EditText>
                <Button
			        android:id="@+id/btConsultarProductos"
			        android:layout_width="90dp"
			        android:layout_height="40dp"
			        android:layout_marginLeft="5dp"
			        android:drawableRight="@drawable/buscar"
			        android:text="Buscar"
					android:background="@drawable/blue_button"
			        style="@style/button_layout"				       			    
					 android:textSize="14sp"
			       android:gravity="center"
			    />


			   <Button
				   android:id="@+id/btSelecArticulos"
				   android:layout_width="90dp"
				   android:layout_height="40dp"
				   android:layout_marginLeft="5dp"
				   android:text="Selec"
				   android:drawableLeft="@drawable/check2"
				   android:textSize="14sp"
				   android:background="@drawable/blue_button"
				   style="@style/button_layout"
				   android:gravity="center"
				  />

		          </LinearLayout>
		           <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

					   <TextView
						   android:id="@+id/tvCantPedir"
						   android:layout_width="40dp"
						   android:layout_height="wrap_content"
						   android:layout_marginLeft="2dp"
						   android:layout_marginTop="5dp"
						   android:text="CANT"
						   android:textSize="10sp"
						   android:gravity="center"
						   />
         <TextView
         android:id="@+id/tvCodigoTitulo"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="2dp"
         android:layout_marginTop="5dp"
         android:text="CODIGO"
         android:textSize="10sp"
         android:gravity="center"
			 android:textColor="#990000"
          />
					   <TextView
						   android:id="@+id/tvStockTitulo"
						   android:layout_width="50dp"
						   android:layout_height="wrap_content"
						   android:layout_marginLeft="2dp"
						   android:layout_marginTop="5dp"
						   android:text="STOCK"
						   android:textSize="10sp"
						   android:gravity="center"
						   android:textColor="#0C5716"
						   />

                       <TextView
                           android:id="@+id/tvNombreTitulo"
                           android:layout_width="125dp"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="2dp"
                           android:layout_marginTop="5dp"
                           android:text="NOMBRE"
                           android:textSize="12sp" />
	     <TextView
	         android:id="@+id/tvPrecioTitulo"
	         android:layout_width="60dp"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="2dp"
	         android:layout_marginTop="5dp"
	         android:text="PRECIO"
	         android:textSize="12sp"
	         android:gravity="right"
	          />
	     
     </LinearLayout>
         <ListView
       			android:id="@+id/lvArticulosVP"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"		        
		         >
		    </ListView>
    </LinearLayout>

</RelativeLayout>
