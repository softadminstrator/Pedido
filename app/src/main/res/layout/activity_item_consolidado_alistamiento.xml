<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_margin_pos_consolidado"
    android:paddingLeft="@dimen/activity_margin_pos_consolidado"
    android:paddingRight="@dimen/activity_margin_pos_consolidado"
    android:paddingTop="@dimen/activity_margin_pos_consolidado"
    tools:context="com.principal.factura.ItemConsolidadoAlistamientoActivity">

    <LinearLayout
        android:id="@+id/llCategoriaAls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvArticuloAls"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="NOMBRE DE ARTICULOS"
            android:gravity="center_vertical|left"
            style="@style/list_item_text" />
        <TextView
            android:id="@+id/tvCantidadAls"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="cantidad"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            style="@style/list_item_text"/>
    </LinearLayout>
</LinearLayout>
