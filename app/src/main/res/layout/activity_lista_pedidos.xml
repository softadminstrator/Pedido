<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:id="@+id/rlListaPedidos">

    
    
    
     

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"      
         android:orientation="vertical" >
          <TextView
				        android:id="@+id/tvOperacionListaPedidos"
				        android:layout_width="fill_parent"
				        android:layout_height="20dp"				        		       
				        android:text="OPERACIÃ“N"
				        android:textSize="16dp"
				        android:gravity="center"
				        android:textAppearance="?android:attr/textAppearanceLarge" />
          <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		          <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent" 	       
		        android:orientation="vertical" >

					  <Button
						  android:id="@+id/btMenuP"
						  android:background="@drawable/blue_button"
						  style="@style/button_layout"
						  android:layout_width="120dp"
						  android:layout_height="match_parent"
						  android:layout_gravity="left"
						  android:layout_marginLeft="5dp"
						  android:drawableRight="@drawable/menu"
						  android:text="Menu" />
          </LinearLayout>
         <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"   
		        android:layout_marginLeft="50dp"   
		        android:orientation="vertical" >
				      <Button
				         android:id="@+id/btVolverP"
				       	 android:layout_gravity="right"
				         android:layout_width="120dp"
					     android:layout_height="35dp"
					     android:layout_marginRight="5dp"
						  android:background="@drawable/blue_button"

						  style="@style/button_layout"
						 android:drawableRight="@drawable/volverwhite"
				         android:text="Volver" />
			         
				     </LinearLayout>
          </LinearLayout>
           <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"      
         android:orientation="horizontal" >
          <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"      
         android:orientation="vertical" >
			          <Button
			        android:id="@+id/btFecha"
			        android:layout_height="40dp"
			        android:layout_width="240dp"			   
			        android:drawableRight="@drawable/fecha" 
			         android:layout_gravity="center"
			         android:layout_marginTop="10dp"
				    android:background="@drawable/blue_button"
					style="@style/button_layout"
					android:text="01/02/2014 -- 01/04/2014 " />
			    
			    <Button
			        android:id="@+id/btRuteroP"
			  		android:layout_height="40dp"
			        android:layout_width="240dp"
			        android:layout_marginTop="15dp"
			         android:layout_gravity="center"
			        android:drawableRight="@drawable/ruta"
					android:background="@drawable/blue_button"

					style="@style/button_layout"
					  android:text="Rutero" />
			     <Button
			        android:id="@+id/btBodegas"
			  		android:layout_height="40dp"
			        android:layout_width="240dp"
			        android:layout_marginTop="15dp"
			         android:layout_gravity="center"
			        android:drawableRight="@drawable/pedidos"
					 android:background="@drawable/blue_button"
					 style="@style/button_layout"
					 android:text="de bodega origen a bodega destino" />
         </LinearLayout>
          </LinearLayout>
         <ListView
        android:id="@+id/lvPedidos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

    </ListView>
     </LinearLayout>

</RelativeLayout>
