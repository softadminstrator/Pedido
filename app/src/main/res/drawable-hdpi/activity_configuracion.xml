<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvIPInfo"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:gravity="left|center_vertical"
        android:text="IP pública PosStar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etIP1"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" >
    </EditText>

    <EditText
        android:id="@+id/etIP2"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" >
    </EditText>

    <EditText
        android:id="@+id/etIP3"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" >
    </EditText>

    <EditText
        android:id="@+id/etIP4"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="170dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" >
    </EditText>

    <TextView
        android:id="@+id/tvIPPunto1"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:gravity="left|center_vertical"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIPPunto2"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="170dp"
        android:gravity="left|center_vertical"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIPPunto3"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="170dp"
        android:gravity="left|center_vertical"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvNRuta"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:gravity="left|center_vertical"
        android:text="No. Ruta Asignada"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNRutaN"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:maxLength="4"
        android:text="0000"
        android:textSize="18sp" >
    </EditText>

    <Button
        android:id="@+id/btGuardar"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="360dp"
        android:text="Guardar"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivtienda"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/conf" />

    <CheckBox
        android:id="@+id/cbModifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etNRutaN"
        android:layout_below="@+id/etNRutaN"
        android:text="  Modifica Precio"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIpSysPunto1"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIpSysPunto2"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="80dp"
        android:gravity="left|center_vertical"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIpSysPunto3"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="80dp"
        android:gravity="left|center_vertical"
        android:text="."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etIpSys1"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"       
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etIpSys2"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="80dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etIpSys3"
        android:layout_width="55dp"
        android:layout_height="40dp"
         android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etIpSys4"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        android:inputType="number"
        android:maxLength="3"
        android:text="000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvIpSys"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:gravity="left|center_vertical"
        android:text="IP pública Sys"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

</RelativeLayout>
