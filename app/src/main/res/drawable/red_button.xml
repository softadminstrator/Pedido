<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" > 
        <shape> 
            <gradient 
                android:startColor="#F5F000"
                android:endColor="#E0BB00"
                android:angle = "180" />
            <corners 
                android:radius="2dip" /> 
        </shape> 
    </item> 

    <item android:state_focused="true" > 
        <shape> 
            <gradient 
                android:startColor="#F5F000"
                android:endColor = "#E0BB00"
                android:angle = "180"/> 
            <corners 
                android:radius="2dip" /> 
        </shape> 
    </item> 
    <item >             
               <shape>
                       <gradient android:angle="270" android:endColor="#F5B900" android:startColor="#F5F000" />
                        <stroke android:width="1dp" android:color="#F5F000" />
                        <corners android:radius="2dp" />                         
                </shape> 
     </item> 
   
           
</selector>