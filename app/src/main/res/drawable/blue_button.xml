<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" > 
        <shape> 
            <gradient 
                android:startColor="#8DB3EF"
                android:endColor="#8DB3EF"
                android:angle = "180" />
            <corners 
                android:radius="30dp" />
        </shape> 
    </item> 

    <item android:state_focused="true" >
        <shape> 
            <gradient 
                android:startColor="#8DB3EF"
                android:endColor = "#8DB3EF"
                android:angle = "180"/> 
            <corners 
                android:radius="30dp" />
        </shape> 
    </item> 
    <item >             
               <shape>
                       <gradient android:angle="270" android:endColor="#4285F4" android:startColor="#4285F4" />
                        <stroke android:width="1dp" android:color="#4285F4" />
                        <corners android:radius="30dp" />
                </shape> 
     </item> 
   
           
</selector>